{
  "name": "decsv",
  "productName": "SLIPPS Teacher Tool",
  "copyright": "Copyright (c) 2018 ${author}",
  "version": "3.0.0-alpha",
  "description": "SLIPPS survey results review and edit application.",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "pack-win": "electron-builder --win --ia32 --dir",
    "dist-win": "electron-builder --win --ia32",
    "dist-mac": "electron-builder --mac",
    "release-m-w": "build --mac --win --x64 --ia32 -p always",
    "dist-multi": "electron-builder -mwl",
    "release": "build --win --ia32 -p always"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Tyaisurm",
        "repo": "DECSV",
        "releaseType": "draft"
      }
    ],
    "appId": "lut.electron.slipps.decsv",
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    },
    "mac": {
      "category": "editor",
      "target": "default",
      "icon": "./build/icon.png"
    },
    "nsis": {
      "artifactName": "${productName} Setup ${os}-${arch}-${version}.${ext}"
    },
    "dmg": {
      "title": "${productName} Setup ${os}-${arch}-${version}"
    },
    "squirrelWindows": {
      "iconUrl": "https://github.com/Tyaisurm/DECSV/blob/master/DECSV_project/build/icon.ico?raw=true",
      "remoteReleases": "https://github.com/Tyaisurm/DECSV",
      "loadingGif": "./build/install-spinner.gif"
    },
    "fileAssociations": {
      "ext": "decsv",
      "name": "DECSV",
      "role": "Editor",
      "description": "SLIPPS Teacher Tool Project File"
    }
  },
  "homepage": "https://github.com/Tyaisurm/DECSV",
  "repository": "https://github.com/Tyaisurm/DECSV",
  "keywords": [
    "Electron",
    "DECSV",
    "SLIPPS"
  ],
  "author": {
    "name": "Jaakko Tuuri"
  },
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "chardet": "0.6.0",
    "charset-detector": "0.0.2",
    "cheerio": "^1.0.0-rc.2",
    "electron-log": "2.2.14",
    "electron-squirrel-startup": "1.0.0",
    "electron-store": "1.3.0",
    "electron-updater": "3.1.2",
    "electron-window-state": "4.1.1",
    "html-parse-stringify2": "2.0.1",
    "iconv": "^2.3.0",
    "jquery": "3.3.1",
    "select2": "4.0.6-rc.1",
    "xlsx": "0.12.6"
  },
  "devDependencies": {
    "ajv": "6.5.0",
    "electron": "^2.0.9",
    "electron-builder": "^20.28.4",
    "electron-rebuild": "^1.8.2"
  }
}
